<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-secondary">
        <div class="container">
            <a href="/" class="navbar-brand">EJS-CRUD</a>
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menu">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/create" class="nav-link">Create</a>
                    </li>
                   
                  
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3 class="display-3 text-success">Edit</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form onsubmit="updateHandler(event)" method="post">
                    <div class="form-group mt-2">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" class="form-control" required>
                    </div>
                    <div class="form-group mt-2">
                        <label for="email">Email</label>
                        <input type="text" name="email" id="email" class="form-control" required>
                    </div>
                    <div class="form-group mt-2">
                        <label for="mobile">Mobile</label>
                        <input type="text" name="mobile" id="mobile" class="form-control" required>
                    </div>
                    <div class="form-group mt-2">
                        <label for="age">Age</label>
                        <input type="number" name="age" id="age" class="form-control" required>
                    </div>
                    <div class="form-group mt-2">
                        <label for="address">Address</label>
                        <textarea name="address" id="address" cols="30" rows="10" class="form-control" required></textarea>
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="Edit user"  class="btn btn-outline-success">
                    </div>
                </form>
            </div>
        </div>
    </div> 
    <script>
            let URL = 'http://localhost:4600';

            let name = document.getElementById('name');
            let email = document.getElementById('email');
            let mobile = document.getElementById('mobile');
            let age = document.getElementById('age');
            let address = document.getElementById('address');

                // to  read query params data from url
            let params = window.location.search;
            let id = new URLSearchParams(params).get('id');
            console.log(`user = id`, id);

            (function(){
                
               if(id) {
                fetch(`${URL}/api/user/${id}`)
                    .then(out => out.json())
                    .then(res => {
                        // console.log(`single user =`, res.user);
                        printValue(res.user);
                    }).catch(err => console.log(err.message))
               }
              
            })()

            function printValue(user) {
                name.value = user.name;
                name.email = user.email;
                name.mobile = user.mobile;
                name.age = user.age;
                name.address = user.address;

            }

            //edit handler function
            const updateHandler = async (event) => {
                event.preventDefault();
                let data= {
                    name: name.value,
                    email: email.value,
                    mobile: mobile.value,
                    age: age.value,
                    address: address.value
                    
                }
                // console.log(`updated data =`, datas)
                await fetch (`${URL}/api/user/${id}`,{
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json'},
                    body: JSON.stringify(data)
                }).then(out => out.json())
                .then(res => {
                    window.alert(res.msg);
                    window.location.href= "/";
                }).catch(err => console.log(err.msg))
            }


        
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>